---
import Services from "./Services.astro";
import Button from "./Button.astro";
---

<section class="hero">
  <img src="../assets/img/HeroImg.png" alt="" />
  <section>
    <h1>Empowering Your Business Growth</h1>
    <p>
      Discover tailored strategies and expert insights to take your business to
      the next level. Let us help you navigate challenges and achieve
      sustainable success.
    </p>
    <Button>Book a Meeting</Button>
  </section>
  <Services />
</section>

<style>
  /* Styles her */
  .hero {
    height: 38rem;
    grid-column: 1/-1;
    background-color: var(--Black);

    display: grid;
    grid-template-rows: 1fr 1fr 1fr;
    grid-template-columns: 1fr minmax(0, 450px) minmax(0, 600px) 1fr;
    align-items: start;

    section {
      width: 100%;
      grid-column: 2/3;
      grid-row: 1/3;
      padding-top: 5rlh;
      color: var(--White);

      p {
        margin-block-start: 0.5rlh;
        margin-block-end: 1rlh;
      }
    }
    img {
      height: 100%;
      object-fit: cover;

      grid-column: 3/-1;
      grid-row: 1/-1;
    }
  }
</style>
