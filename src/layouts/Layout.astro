---
import "../styles/main.css";
import Button from "../components/Button.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cabin:ital,wght@0,400..700;1,400..700&family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />

    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <header>
      <div>
        <h5>AskExpress</h5>
        <nav>
          <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/casestudy">Case Study</a></li>
            <li><a href="/teams">Teams</a></li>
            <li><a href="/about">About</a></li>
          </ul>
        </nav>
        <Button theme="primary">Join</Button>
      </div>
    </header>
    <main><slot /></main>
    <footer>
      <div>
        <h5>AskExpress</h5>
        <div class="streg"></div>
        <p>
          Â©2022 Consultalk. All rights reserved | Terms of Service | Privacy
          Policy
        </p>
      </div>
    </footer>
  </body>

  <style>
    @layer components {
      header,
      footer {
        background-color: var(--DarkGrey);
      }
      header div {
        grid-column: 2 / 3;

        display: grid;
        grid-template-columns: 1fr 2fr 1fr;
        justify-items: center;
        align-items: center;

        > * {
          grid-column: span 1;
        }
        nav ul {
          display: flex;
          gap: 1rlh;
          list-style: none;
        }
        h5 {
          text-box-trim: trim-both;
          text-box-edge: cap alphabetic;
        }
        h5,
        a {
          color: var(--White);
        }
      }

      footer div:not(.streg) {
        display: grid;
        grid-column: 1fr;
        grid-row: 1fr 1fr 1fr;
        justify-items: center;
        align-items: center;
        gap: 0.5rlh;
        padding: 1rem;

        .streg {
          height: 1px;
          max-width: 50rem;
          min-width: 80%;
          border-bottom: solid 0.06rem var(--White);
        }
        h5 {
          text-align: center;
        }
        h5,
        p {
          color: var(--White);
        }
      }
    }
  </style>
</html>
